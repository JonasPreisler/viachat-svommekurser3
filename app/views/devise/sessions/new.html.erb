<center>
<div style="background: #f3f2f2;padding:15px;border-radius:10px;color:#1c1c1c;" class="property-form">
	
	<h4><b><%= I18n.t "login" %></b></h4>
	 <%- flash.each do |name, msg| -%>
	    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
	  <%- end -%>  

	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

	    <div class="mobileHide">
		  <div class="form-inputs">
		    <%= f.input :email, placeholder: 'Email', label: false, required: false, autofocus: true %><br />
		    <%= f.input :password, placeholder: 'Password', label: false, required: false %><br />
		  </div>

		  <div class="form-actions">
		    <%= f.submit I18n.t('login'), class: 'button' %><br /><br />
		  </div>
		</div>

	    <div class="desktopHide">
		  <div class="form-inputs">
		    <%= f.input :email, placeholder: 'Email', label: false, required: false, autofocus: true %><br />
		    <%= f.input :password, placeholder: 'Password', label: false, required: false %><br />
		  </div>

		  <div class="form-actions">
		    <%= f.submit I18n.t('login'), class: 'button' %><br /><br />
		  </div>
		</div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
</center>